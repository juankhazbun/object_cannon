<h1>Ranking</h1>
<table class="table">
	<tr>
		<th>Player 1 Name</th>
		<th>Player 2 Name</th>
		<th>Winner Wall Health Remaining</th>
		<th>Winner</th>
	</tr>
	<% @games.each do |game| %>
    	<tr>
    		<td><%= game.player1.name %></td>
    		<td><%= game.player2.name %></td>
    		<% if game.winner == 1 %>
    			<td><%= game.player1.wall_health %></td>
    			<td><%= game.player1.name %></td>
			<% elsif game.winner == 2 %>
				<td><%= game.player2.wall_health %></td>
				<td><%= game.player2.name %></td>
			<% else %>
				<td>----</td>
				<td>Not Completed</td>
			<% end %>
    		
		</tr>
  	<% end %>
</table>
<div class="flickr_pagination">
	<%= will_paginate @games %>
</div>